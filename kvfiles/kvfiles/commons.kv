<BackButton>:
    MDIconButton:
        icon: "chevron-left"
        style: "outlined"
        theme_icon_color: "Custom"
        icon_color: "white"
        pos_hint: {"center_y": .6}
        on_release: root.back()
        radius: 12 
        theme_line_color: "Custom" 
        theme_line_width: "Custom"
        line_color : ButtonColor
        theme_bg_color: "Custom"
        md_bg_color : ButtonColor

        line_width: 1

<TeamBadge>: 
    adaptive_height: True
    orientation: "horizontal"
    spacing: "20dp"
    MDIcon:
        id: myicon
        icon: "circle"
        theme_font_size: "Custom"
        color: root.color 
        font_size: "32sp"

    MDLabel:
        id: label
        text: root.team
        theme_font_name: "Custom"
        font_style: "Title"
        role: "large"
        bold: True
        color: "white" 