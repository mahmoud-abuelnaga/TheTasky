#: include kvfiles/commons.kv
#: import ButtonColor components.commons.ButtonColor


<AddMemberScreen>:
    name: "add_member"
    MDFloatLayout:
        BackButton:
            id: back_button
            screen: root
            size_hint_x: .7
            pos_hint: {"center_x": .4, "center_y": .85}
        MDLabel:
            text: "Add Team Member"
            theme_text_color: "Custom"
            text_color: "#ffffff"
            font_style: "Headline"
            role: "large"
            bold: True
            pos_hint: {"center_x": .65, "center_y": .945}


    MDBoxLayout:
        orientation: "vertical"
        spacing: "45dp"
        adaptive_height: True
        size_hint_x: .8
        pos_hint: {"center_x": .5, "center_y": .5}

        MDBoxLayout:
            orientation: "vertical"
            spacing: "25dp"
            adaptive_height: True
            MDLabel:
                text: "Team Name"
                theme_text_color: "Custom"
                text_color: "#ffffff"
                font_style: "Title"
                role: "large"
                bold: True

            MDTextField:
                color_mode: 'accent'
                id : name_field
                mode: "outlined"
                theme_text_color: "Custom"
                theme_line_color: "Custom"
                theme_bg_color: "Custom"
                line_color_focus: "green"
                text_color_normal: 1,1,1,1
                text_color_focus: 1,1,1,1
                # required: True
                on_focus: root.open_available_teams_menu(self.focus)
                MDTextFieldHintText:
                    text: "Team Name"
                    theme_text_color: "Custom"
                    text_color_normal: 1,1,1,1
                    text_color_focus: 1,1,1,1


        MDBoxLayout:
            orientation: "vertical"
            spacing: "25dp"
            adaptive_height: True
            MDLabel:
                text: "Member Email"
                theme_text_color: "Custom"
                text_color: "#ffffff"
                font_style: "Title"
                role: "large"
                bold: True

            MDTextField:
                color_mode: 'accent'
                id : email_field
                mode: "outlined"
                theme_text_color: "Custom"
                theme_line_color: "Custom"
                theme_bg_color: "Custom"
                line_color_focus: "green"
                text_color_normal: 1,1,1,1
                text_color_focus: 1,1,1,1
                # required: True
                validator: "email"
                MDTextFieldHintText:
                    text: "Email"
                    theme_text_color: "Custom"
                    text_color_normal: 1,1,1,1
                    text_color_focus: 1,1,1,1

    MDButton:
        id: add_team_button
        style: "filled"
        pos_hint: {"center_x": .5, "center_y":.24}
        theme_width: "Custom"
        theme_height: "Custom"
        size_hint_x: .3
        size_hint_y: .04
        theme_bg_color: "Custom"
        on_release: root.confirm_join_team()
        md_bg_color: ButtonColor
        radius: 15

        MDButtonIcon:
            icon: "plus"

        MDButtonText:
            text: "ADD MEMBER"
            theme_font_size: "Custom"
            theme_font_name: "Custom"
            font_name: "assets/Poppins/Poppins-Bold.ttf"
            pos_hint: {"center_x": .55, "center_y": .5}
