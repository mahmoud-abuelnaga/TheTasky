#: import ButtonColor components.commons.ButtonColor
#: include kvfiles/task_card.kv

<TaskScreen>:
    id: task_screen
    name: "tasks"
    MDFabButton:
        id: add_button
        icon: "plus"
        theme_bg_color: "Custom"
        md_bg_color: ButtonColor                
        theme_icon_color: "Custom"
        icon_color: "#ffffbb"
        on_press: root.open_add_task_window()
        pos_hint: {"center_x": .9, "center_y": .05}

    MDFloatLayout:
        MDLabel:
            text: "My Tasks"
            theme_text_color: "Custom"
            text_color: "#ffffff"
            font_style: "Headline"
            role: "large"
            bold: True
            pos_hint: {"center_x": .55, "center_y": .955}

        MDIconButton:
            style: "filled"
            theme_bg_color: "Custom"
            md_bg_color: ButtonColor
            icon: "account"
            color: "white"
            pos_hint: {"center_x": .9, "center_y": .96}
            on_release: root.open_info_screen()

    ScrollView:
        pos_hint: {"center_x": .55, "top": .93}
        size_hint_x: 1
        size_hint_y: .84
        MDBoxLayout: 
            id : tasks_container
            orientation: "vertical"
            adaptive_height: True
            spacing: "100dp"
            padding: 0, "100dp", 0, 0
            pos_hint: {"center_x": .5, "top": .8}
            size_hint_x: .9

